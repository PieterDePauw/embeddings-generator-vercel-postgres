// PRISMA DATABASE SCHEMA

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model File {
  id       Int      @id @default(autoincrement())
  filePath String   @unique
  fileHash String
  updatedAt DateTime @updatedAt @default(now())
}

model Embedding {
  id         Int      @id @default(autoincrement())
  filePath   String
  chunkIndex Int
  content    String
  embedding  String
  updatedAt  DateTime @updatedAt @default(now())
  @@unique([filePath, chunkIndex])
}
